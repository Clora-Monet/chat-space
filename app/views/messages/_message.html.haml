.message{"data-message-id": "#{message.id}"}
  .main__messages__box 
    .main__messages__box__info
      .main__messages__box__info__user-name
        = message.user.name
      .main__messages__box__info__creat-at
        = message.created_at.strftime("%Y/%m/%d %H:%M")
    .main__messages__box__text
      - if message.content.present?
        %p.main__messages__box__text__content
          = message.content
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?